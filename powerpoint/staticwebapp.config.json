{
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/*",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/taskpane.html",
    "exclude": [
      "/assets/*",
      "/icons/*",
      "/*.js",
      "/*.css",
      "/*.json",
      "/*.xml"
    ]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".xml": "application/xml",
    ".svg": "image/svg+xml"
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' https://appsforoffice.microsoft.com; script-src 'self' 'unsafe-inline' https://appsforoffice.microsoft.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:;"
  }
}